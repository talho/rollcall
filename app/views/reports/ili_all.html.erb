<div class="rollcall_report">
  <h1>ILI Report</h1>
  <%- filtered = filters.present? ? "(FILTERED)" : "" -%>

  <% if entries %>
    <table cellspacing="0" class="zebra-striped">
      <caption style="text-align:center">
        <%= "Schools#{filtered} as of #{Time.now}" %>
      </caption>
      <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          TeaID
        </th>
        <th>
          Student
        </th>
        <th>
          Symptoms
        </th>
        <th>
          ReportDate
        </th>
      </tr>
      </thead>
      <div class="nobreak">
        <%- entries.each_with_index do |r,i| -%>
          <tr class="<%= (i%2 > 0) ? 'Odd' : 'Even' %>">
            <td>
              <%= r["display_name"] %>
            </td>
            <td>
              <%= r["tea_id"] %>
            </td>
            <td>
              <%= "#{r["student_first_name"]} #{r["student_last_name"]}" %>
            </td>
            <td>
              <%= r["symptoms"] %>
            </td>
            <td>
              <%= r["report_date"] %>
            </td>
          </tr>
        <%- end -%>

      </div>
    </table>
<% end %>


</div>