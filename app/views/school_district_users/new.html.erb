<h1>Invite New User</h1>
<h3><%= @school_district_user.school_district.name %></h3>
<%= form_for @school_district_user, url: school_district_school_district_users_path(@school_district_user.school_district) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :role %>
    <%= f.select :role, [:staff, :admin], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Invite', class: 'btn btn-primary' %>
  </div>
<% end %>
